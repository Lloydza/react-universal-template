{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "src",
    "outDir": "./dist/",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "app": ["src/app"],
      "server": ["src/server"],
      "tests": ["src/test"],
      "types": ["src/types"],
      "utils": ["src/utils"]
    },
    "lib": ["dom", "es5", "es6"]
  },
  "include": ["src"],
  "exclude": ["node_modules/", "dist/"]
}
