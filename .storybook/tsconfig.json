{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "rootDir": "../",
    "baseUrl": "./",
    "outDir": "dist/",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "app": ["src/app"],
      "tests": ["src/test"],
      "types": ["src/types"],
      "utils": ["src/utils"]
    },
    "lib": ["dom", "es5", "es6"]
  },
  "include": ["src/app"],
  "exclude": ["node_modules/", "dist/", "src/server"]
}
